# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/tweeter

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production

# Server Configuration
NODE_ENV=development
PORT=3000

# Cookie Configuration
COOKIE_DOMAIN=localhost

# Cloudinary Configuration (for avatar uploads)
# Sign up at cloudinary.com to get these credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Mailgun Configuration (for password reset emails)
# Sign up at mailgun.com to get these credentials
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@tweeter.com
MAILGUN_FROM_NAME=Tweeter

# Application URL (used in password reset emails)
APP_BASE_URL=http://localhost:5173
